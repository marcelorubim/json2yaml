{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}